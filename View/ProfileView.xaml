<UserControl x:Class="MonkeSwap_Desktop.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonkeSwap_Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Width="250"
            Orientation="Vertical"
            Margin="30,10,100,0"
            Grid.Row="0"
            Grid.Column="0">
            <Ellipse Height="120" Width="120"
         Stroke="{StaticResource titleColor3}"
         StrokeThickness="2"
         Margin="10,0,10,0"
         VerticalAlignment="Top"
         Grid.Row="0">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Images/user_icon.jpg"/>
                </Ellipse.Fill>
            </Ellipse>

            <TextBlock x:Name="profileUsernameTxt"
                   Text=""
                   Foreground="White"
                   FontSize="25"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,20"/>
        </StackPanel>

        <StackPanel Width="200"
                    Orientation="Vertical"
                    Margin="30,10,0,0"
                    HorizontalAlignment="Left"
                    Grid.Row="1">

            <TextBlock Text="Email Address:"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,35,0,5"
                               />

            <TextBlock Text="Trades Completed:"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,5"
                               />

            <TextBlock         Text="Date of Registration:"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,5"
                               />
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,15,0,0"
                                VerticalAlignment="Bottom"
                                Grid.Row="1">

            <TextBlock Text="MonkeSwap 2024"
                               Foreground="DarkGray"
                               FontSize="11"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Width="250"
                           VerticalAlignment="Bottom"/>

        </StackPanel>

        <StackPanel Width="200"
            Orientation="Vertical"
            Margin="185,10,0,0"
            HorizontalAlignment="Left"
            Grid.Row="1"
            Grid.Column="0" Grid.ColumnSpan="2">

            <TextBlock x:Name="profileEmailTxt"
                   Text=""
                   Foreground="DarkGray"
                   FontSize="15"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Margin="0,35,0,5"
                   />

            <TextBlock x:Name="profileTradesCompletedTxt"
                   Text=""
                   Foreground="DarkGray"
                   FontSize="15"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Margin="0,15,0,5"
                   />

            <TextBlock x:Name="profileDateOfRegistrationTxt"        
                   Text=""
                   Foreground="DarkGray"
                   FontSize="15"
                   FontWeight="Medium"
                   FontFamily="Montserrat"
                   Margin="0,15,0,5"
                   />

        </StackPanel>
        <Image Source="/Images/gibbon_logo.png" Margin="118,0,-388,118" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
