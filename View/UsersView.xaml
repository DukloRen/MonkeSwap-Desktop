<UserControl x:Class="MonkeSwap_Desktop.View.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonkeSwap_Desktop.View"
             xmlns:viewModel="clr-namespace:MonkeSwap_Desktop.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             d:DataContext="{d:DesignInstance Type=viewModel:UsersViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <Control.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Control.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="550"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Filter by"
                       Grid.Row="0"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Margin="0,0,215,0"
                       Foreground="Black"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>

            <!--Filter Textbox-->
            <Grid Width="200" Height="45"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Grid.Row="0">
                <TextBlock Margin="20,0,0,12"
                          VerticalAlignment="Center"
                          Foreground="Gray"
                          IsHitTestVisible="False"
                          Panel.ZIndex="1"
                          Text="Search in IDs"
                          Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

                <TextBox x:Name="txtFilter"
                         Style="{StaticResource textboxFilter}"
                         Margin="0,0,0,11"
                         TextChanged="txtFilter_TextChanged"/>

                <fa:IconImage Icon="MagnifyingGlass"
                  Style="{StaticResource menuButtonIcon}"
                  Width="15"
                  Height="15"
                  VerticalAlignment="Center"
                  Foreground="#b0b9c6"
                  HorizontalAlignment="Right"
                  Margin="0,0,15,10"/>
            </Grid>

            <!--Users Datagrid-->
            <DataGrid Style="{DynamicResource DataGridStyle1}"
                      CellStyle="{DynamicResource DataGridCellStyle1}"
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                      RowStyle="{DynamicResource DataGridRowStyle1}"
                      Grid.Row="1"
                      x:Name="dtGrid"
                      HorizontalScrollBarVisibility="Disabled" 
                      Margin="0,10,0,134">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" IsReadOnly="True" Width="*" CanUserResize="False" Binding="{Binding id}"/>
                    <DataGridTextColumn Header="Username" IsReadOnly="True" Width="*" Binding="{Binding username}"/>
                    <DataGridTextColumn Header="Email" IsReadOnly="True" Width="*" Binding="{Binding email}"/>
                    <DataGridTextColumn Header="TC" IsReadOnly="True" Width="*" Binding="{Binding tradesCompleted}"/>
                    <DataGridTextColumn Header="DOR" IsReadOnly="True" Width="*" Binding="{Binding dateOfRegistration}"/>
                    <DataGridTextColumn Header="Role" IsReadOnly="True" Width="*" Binding="{Binding role}"/>
                    <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="auto" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource gridEditButton}" x:Name="editButton" Click="editButton_Click">
                                        <fa:IconImage Icon="Exchange" Style="{StaticResource controlButtonIcon}" Width="12" Height="12"/>
                                    </Button>
                                    <Button Style="{StaticResource gridRemoveButton}" x:Name="deleteButton" Margin="5,0,0,0" Click="deleteButton_Click">
                                        <fa:IconImage Icon="Trash" Style="{StaticResource controlButtonIcon}" Width="12" Height="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
